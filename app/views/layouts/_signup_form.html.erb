<%= form_for user, url: user_registration_path do |f| %>
  <div class="form-group row">
    <div class="col-xs-12">
      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, autofocus: true, class: "form-control",
        id: "sign_up_email" %>
      <p class="signup-errors no-display" id="email-errors"></p>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.label :password, t(".password") %>
      <%= f.password_field :password, autocomplete: "off",
        class: "form-control", id: "sign_up_password" %>
      <p class="signup-errors no-display" id="password-errors"></p>
    </div>

    <div class="col-xs-6">
      <%= f.label :password_confirmation, t(".password_confirmation") %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control"%>
      <p class="signup-errors no-display" id="password_confirmation-errors"></p>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.label :first_name, t(".first_name") %>
      <%= f.text_field :first_name, class: "form-control" %>
      <p class="signup-errors no-display" id="first_name-errors"></p>
    </div>

    <div class="col-xs-6">
      <%= f.label :last_name, t(".last_name") %>
      <%= f.text_field :last_name, class: "form-control"%>
      <p class="signup-errors no-display" id="last_name-errors"></p>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-6">
      <%= f.label :birthday, t(".birthday") %>
      <%= f.text_field :birthday, data: {provide: "datepicker"},
        class: "form-control" %>
      <p class="signup-errors no-display" id="birthday-errors"></p>
    </div>

    <div class="col-xs-6">
      <%= f.label :gender, t(".gender") %><br />
      <%= f.select :gender, gender_selections, {}, {class: "form-control"} %>
      <p class="signup-errors no-display" id="gender-errors"></p>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-12">
      <%= f.label :address, t(".address") %>
      <%= f.text_field :address, class: "form-control" %>
      <p class="signup-errors no-display" id="address-errors"></p>
    </div>
  </div>
  <%= f.submit  t(".sign_up"), class: "btn btn-primary", id: "signup-btn" %>
<% end %>
